<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Favourites">
     <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/nocontlinearlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_height="250dp"
                android:layout_width="250dp"
                app:lottie_rawRes="@raw/signup"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="Login with your account \n to add recipe in \n favourite list"/>
            <Button
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#93C75B"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/signup1"
                    android:textColor="@color/white" />
    </LinearLayout>
    </RelativeLayout>

</FrameLayout>